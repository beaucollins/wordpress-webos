INSTALL & LAUNCH:
#!/bin/bash
palm-package wordpress.application wordpress.service wordpress.package
palm-install org.wordpress.webos*.ipk
palm-launch org.wordpress.webos

REMOVE THE APP:
palm-install -r org.wordpress.webos

ACCESS THE LOG:
palm-log -f org.wordpress.webos

---
palm-package wordpress.* && palm-install org.wordpress.webos*.ipk && palm-launch org.wordpress.webos && palm-log -f org.wordpress.webos